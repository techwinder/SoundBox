<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                tools:context=".MainActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/tone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tone"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:background="@color/lightseagreen"
            android:padding="11dp" />
        <Button
            android:id="@+id/mplayer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="MPlayer"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:background="@color/mediumseagreen"
            android:padding="11dp" />
        <Button
            android:id="@+id/soundpool"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SoundPool"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:background="@color/seagreen"
            android:padding="11dp" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1 bip"
            android:id="@+id/rb1"
            android:checked="true"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3 bips"
            android:id="@+id/rb2"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5 bips"
            android:id="@+id/rb3"/>
    </RadioGroup>

    <TextView
        android:id="@+id/ZeOutput"
        android:layout_width="match_parent"
        android:background="@color/deepmaroon"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:scrollbars="vertical"
        android:text=""
        android:typeface="monospace" />
</LinearLayout>
